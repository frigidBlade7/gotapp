<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gotapp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/red_hat_display</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="linearProgressIndicatorStyle">@style/Widget.Loader.Linear</item>
        <item name="buttonStyle">@style/Widget.Button.Flat</item>
    </style>



    <style name="Theme.Gotapp.Splash" parent="Theme.SplashScreen">
        <item name="actionBarSize">0dp</item>
        <item name="windowSplashScreenBackground">@color/surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Gotapp</item>
    </style>

    <style name="Widget.Loader.Linear" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackCornerRadius">4dp</item>
    </style>
    <style name="Widget.Button.Flat" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/default_margin</item>
        <item name="paddingStart">@dimen/default_margin</item>
        <item name="paddingEnd">@dimen/default_margin</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Large</item>
    </style>

    <style name="TextAppearance.Heading" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/red_hat_display_bold</item>
    </style>
    <style name="TextAppearance.Regular" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/red_hat_display</item>
        <item name="font">@font/red_hat_display</item>
    </style>
    <style name="TextAppearance.Medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/red_hat_display</item>
        <item name="font">@font/red_hat_display</item>
    </style>
    <style name="TextAppearance.Large" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/red_hat_display_bold</item>
        <item name="font">@font/red_hat_display_bold</item>
    </style>
</resources>